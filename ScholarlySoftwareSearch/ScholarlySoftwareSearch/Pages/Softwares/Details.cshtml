@page
@model ScholarlySoftwareSearch.Pages.Softwares.DetailsModel

@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Software</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Software Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Software.SoftwareName)
        </dd>
        <dt class="col-sm-2">
            Author(s)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Software.Authors)
        </dd>
        <dt class="col-sm-2">
            Uploader Username
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Software.UploaderID)
        </dd>
        <dt class="col-sm-2">
            Upload Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Software.UploadDate)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Software.Description)
        </dd>
        <dt class="col-sm-2">
            Publisher
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Software.Publisher)
        </dd>
        <dt class="col-sm-2">
            Download URL
        </dt>
        <dd class="col-sm-10">
            <a href=@Model.Software.DownloadURL target="_blank">@Html.DisplayFor(model => model.Software.DownloadURL)</a>
        </dd>
        <dt class="col-sm-2">
            Tag
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Software.Tag)
        </dd>
    </dl>
</div>
<div>

    @if (SignInManager.IsSignedIn(User) && (User.IsInRole("Admin") || User.IsInRole("Manager") || Model.Software.UploaderID == User.Identity.Name))
    {
        <a asp-page="./Edit" asp-route-id="@Model.Software.Id">Edit</a>
        <a>|</a>
}

    <a asp-page="./Index">Back to List</a>
</div>
