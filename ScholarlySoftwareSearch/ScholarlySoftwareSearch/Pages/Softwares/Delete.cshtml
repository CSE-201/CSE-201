@page
@model ScholarlySoftwareSearch.Pages.Softwares.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Software</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Software Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Software.SoftwareName)
        </dd>
        <dt class="col-sm-2">
            Author(s)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Software.Authors)
        </dd>
        <dt class="col-sm-2">
            Uploader Username
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Software.UploaderID)
        </dd>
        <dt class="col-sm-2">
            Upload Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Software.UploadDate)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Software.Description)
        </dd>
        <dt class="col-sm-2">
            Publisher
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Software.Publisher)
        </dd>
        <dt class="col-sm-2">
            Download URL
        </dt>
        <dd class="col-sm-10">
            <a href=@Model.Software.DownloadURL target="_blank">@Html.DisplayFor(model => model.Software.DownloadURL)</a>
        </dd>
        <dt class="col-sm-2">
            Tag
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Software.Tag)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Software.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
