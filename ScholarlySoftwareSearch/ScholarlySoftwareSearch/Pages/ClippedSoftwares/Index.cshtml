    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClippedSoftware[0].UploaderID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClippedSoftware[0].SoftwareID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClippedSoftware[0].ClipDate)
            </th>
            <th></th>
        </tr>
