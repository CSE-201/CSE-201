                @Html.DisplayFor(modelItem => item.SoftwareID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClipDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
